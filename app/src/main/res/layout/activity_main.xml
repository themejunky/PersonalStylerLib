<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mystylistlib.themejunky.com.mystylistlib.MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <com.themejunky.personalstylerlib.customviews.CustomButtonBorder
          android:id="@+id/nHaveLocation"
          android:layout_width="0dp"
          android:layout_weight="49"
          android:layout_height="wrap_content"
          app:cbb_tag="@string/location_key_button_havelocation"
          app:cbb_padding="15dp"
          app:cbb_icon="@drawable/ic_profile_1"
          app:cbb_backgroundColor="@color/base_white"
          app:cbb_backgroundColor_pressed="@color/base_violet"
          app:cbb_text_color="@color/base_black"
          app:cbb_text_color_pressed="@color/base_white"
          app:cbb_borderColor="@color/base_grey2"
          app:cbb_borderColor_pressed="@color/base_violet"
          app:cbb_border_default="@color/CustomButtonBorder_border_color_location"
          app:cbb_text="Test"
          />

      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"/>

      <com.themejunky.personalstylerlib.customviews.CustomButtonBorder
          android:id="@+id/nNoLocation"
          android:layout_width="0dp"
          android:layout_weight="49"
          android:layout_height="wrap_content"
          app:cbb_tag="@string/location_key_button_nolocation"
          app:cbb_padding="15dp"
          app:cbb_icon="@drawable/ic_profile_1"
          app:cbb_backgroundColor="@color/base_white"
          app:cbb_backgroundColor_pressed="@color/base_violet"
          app:cbb_text_color="@color/base_black"
          app:cbb_text_color_pressed="@color/base_white"
          app:cbb_borderColor="@color/base_grey2"
          app:cbb_borderColor_pressed="@color/base_violet"
          app:cbb_border_default="@color/CustomButtonBorder_border_color_location"
          app:cbb_text="Test"
          />

   </LinearLayout>

</LinearLayout>
