<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    tools:context="mystylistlib.themejunky.com.mystylistlib.MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">

        <com.themejunky.personalstylerlib.customviews.CustomInput
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:id="@+id/nSpinnerTest"
            app:ci_keyboard="text"
            app:ci_type="spinner"
            app:ci_hint="Textul tau"
            app:ci_title_text="Text"
            app:ci_imei_option="next"

            />
        <com.themejunky.personalstylerlib.customviews.CustomInput
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            app:ci_keyboard="text"
            app:ci_type="input"
            app:ci_hint="Textul tau"
            app:ci_title_text="Text"
            app:ci_imei_option="done"
            />
        <com.themejunky.personalstylerlib.customviews.CustomInput
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            app:ci_keyboard="password"
            app:ci_type="input"
            app:ci_title_text="Text"
            app:ci_imei_option="done"
            />
        <com.themejunky.personalstylerlib.customviews.CustomInput
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            app:ci_keyboard="password"
            app:ci_type="input"
            app:ci_hint="a*f*g*t*t**"
            app:ci_title_text="Text"
            app:ci_imei_option="done"
            />
    </LinearLayout>



    <com.themejunky.personalstylerlib.customviews.CustomInput
        android:id="@+id/nEmail"
        style="@style/base_match_wrap"
        app:ci_imei_option="next"
        app:ci_type="input"
        app:ci_keyboard="email"
        app:ci_title_text="@string/login_email_title"
        app:ci_hint="@string/login_email_hint"
        app:ci_error_message="@string/login_error_1"
        />


    <com.themejunky.personalstylerlib.customviews.CustomInput
        android:id="@+id/nPassword"
        style="@style/base_login_input"
        app:ci_imei_option="done"
        app:ci_type="input"
        app:ci_keyboard="password"
        app:ci_title_text="@string/login_password_title"
        app:ci_hint="@string/login_password_hint"
        app:ci_error_message="@string/login_error_2"
        />




    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/SwitchCompatStyle"/>

    <com.themejunky.personalstylerlib.customviews.CustomTextSwitch
        android:id="@+id/nSwitchr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cts_text="Arata numarul meu tuturor clientilor"
        app:cts_subtext="Doar clientii care au o comanda activa cu tine vor putea vedea  numarul tau de telefon"/>










</LinearLayout>
