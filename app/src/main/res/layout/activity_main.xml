    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    tools:context="mystylistlib.themejunky.com.mystylistlib.MainActivity">


   <com.themejunky.personalstylerlib.customviews.CustomInput
        android:id="@+id/nEmail"
        style="@style/MatchWrap"
        app:ci_imei_option="next"
        app:ci_type="input"
        app:ci_keyboard="email"
        app:ci_title_text="Adresa de email"
        app:ci_hint="ionescu.popescu@gmail.com"
        app:ci_error_message="Adresa de email incorecta"
        />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp"
    android:hint="ionescu.popescu@gmail.com"/>


</LinearLayout>
