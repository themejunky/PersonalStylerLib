<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    tools:context="mystylistlib.themejunky.com.mystylistlib.MainActivity">




    <com.themejunky.personalstylerlib.customviews.CustomInput
        android:id="@+id/nEmail"
        style="@style/base_match_wrap"
        android:layout_marginTop="45dp"
        app:ci_hint="ionescu.popescu@gmail.com"
        app:ci_imei_option="next"
        app:ci_keyboard="text"
        app:ci_min_lines="2"
        app:ci_gravity="center_vertical"
        app:ci_title_text="Adresa de mail"
        app:ci_type="input_multiline" />

    <com.themejunky.personalstylerlib.customviews.CustomInput
        android:id="@+id/nEmai2l"
        style="@style/base_match_wrap"
        android:layout_marginTop="45dp"
        app:ci_hint="ionescu.popescu@gmail.com"
        app:ci_imei_option="next"
        app:ci_keyboard="text"
        app:ci_title_text="Adresa de mail"
        app:ci_type="spinner" />




</LinearLayout>
