<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nContainer"
    style="@style/MatchMatch.Vertical">

    <TextView
        android:id="@+id/nTitle"
        style="@style/WrapWrap.Bold.Black.14"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="@string/photos_option_choose"/>

    <View
        style="@style/Divider.Horizontal"
        android:background="@color/base_line"/>

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/nChooseDelete"
            style="@style/MatchWrap.Regular.Black.14"
            android:layout_margin="12dp"
            android:text="@string/photos_option_delete"/>

        <View
            style="@style/Divider.Horizontal"/>

        <TextView
            android:id="@+id/nChooseEdit"
            style="@style/MatchWrap.Regular.Black.14"
            android:layout_margin="12dp"
            android:text="@string/photos_option_edit"/>

    </LinearLayout>

    <View
        style="@style/Divider.Horizontal"
        android:background="@color/base_line"/>

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:background="@color/base_dialog_buttons_background">
        <TextView
            android:id="@+id/nCancel"
            style="@style/PopupActionButtons"
            android:text="@string/photos_option_close"/>


    </LinearLayout>

</LinearLayout>
