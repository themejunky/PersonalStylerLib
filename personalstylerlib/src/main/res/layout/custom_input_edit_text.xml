<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_LL_match_wrap_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nTitle"
            style="@style/base_wrap_wrap" />

        <TextView
            android:id="@+id/nMandatory"
            style="@style/Register_Mandatory" />

    </LinearLayout>

    <EditText
        android:id="@+id/nInput"
        style="@style/base_match_wrap"
        android:layout_marginTop="-15dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/inputWithBorder"
        style="@style/base_match_wrap"
        android:background="@drawable/border_edit_text"
        android:paddingLeft="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/inputMultiLine"
        style="@style/base_match_wrap"
        android:background="@drawable/border_edit_text"
        android:visibility="gone"


        />


    <com.themejunky.personalstylerlib.customviews.CustomSpinner
        android:id="@+id/nCustomSpinner"
        style="@style/base_match_wrap"
        android:visibility="gone" />

    <TextView
        android:id="@+id/nError"
        style="@style/Login_Error" />

</LinearLayout>