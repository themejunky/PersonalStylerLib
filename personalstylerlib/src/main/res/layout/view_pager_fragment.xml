<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nContainerPager"
        style="@style/MatchMatch.Vertical"
        android:background="@color/intro_bg_picture_page1"
        android:weightSum="100">

        <ImageView
            android:id="@+id/nImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40" />

        <RelativeLayout
            android:id="@+id/nContainerLinear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:background="@drawable/background_intro1"
            android:orientation="vertical">

            <LinearLayout
                style="@style/WrapWrap.Vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/nTitle"
                    style="@style/WrapWrap.Bold.White.25"
                    android:layout_gravity="center"
                    android:text="@string/intro_title_page1" />

                <TextView
                    android:id="@+id/nText"
                    style="@style/WrapWrap.Bold.White.18"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/intro_description1_page1" />
            </LinearLayout>

            <ViewStub
                android:id="@+id/nextViewStub"
                style="@style/MatchMatch"
                android:layout_alignParentBottom="true"
                android:layout="@layout/next_layout" />

            <ViewStub
                android:id="@+id/finishViewStub"
                style="@style/MatchMatch"
                android:layout_alignParentBottom="true"
                android:layout="@layout/finish_layout" />

        </RelativeLayout>

    </LinearLayout>

