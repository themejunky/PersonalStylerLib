<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/CustomInput_default_background_color">
                </solid>

                <corners android:radius="5dp" />

                <padding
                    android:bottom="0dp"
                    android:left="0dp"
                    android:right="10dp"
                    android:top="0dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/CustomInput_default_border_color_unfocus"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center|right"
                android:src="@drawable/arrow2" />
        </item>
    </layer-list></item>
</selector>