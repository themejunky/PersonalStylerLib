<resources>


    <!-- Custom-Button -->
    <style name="Custom_Button_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.05</item>
    </style>
    <style name="Custom_Button_Shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.95</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@drawable/custom_round_corrners</item>
    </style>
    <style name="Custom_Button_Text" parent="MatchMatch">
        <item name="android:background">@drawable/custom_round_corrners</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <!-- Onboarding sides -->
    <style name="default_blank_sides">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">42</item>
    </style>
    <style name="default_blank_center">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">916</item>
    </style>
    <style name="default_scroll_icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:src">@drawable/icon_is_scroll</item>
    </style>


    <!-- Top Bar -->
    <style name="TopBarContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@drawable/registration_gradient_bar</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TopBarContainer_Icon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:tag">@string/reset_key_button_back</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TopBarContainer_Title" parent="WrapWrap.Bold.White.16">
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TopBarContainer_Guide" parent="WrapWrap.Bold.White.16">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>



    <!-- Switch-->
    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@drawable/switch_color_thumb</item>
        <item name="trackTint">@drawable/switch_color_track</item>
    </style>

    <style name="cb_default_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/default_text_buttons</item>
    </style>

    <style name="cs_default_style" parent="MatchWrap.Regular.Black.14">
    </style>

    <style name="ci_default_style" parent="MatchWrap.Regular.Black.14">
    </style>

    <!-- Main -->


    <style name="Side_Menu_Image">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>



    <style name="Base_MediumText" parent="WrapWrap">
        <item name="fontPath">Catamaran-Regular.ttf</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">14sp</item>
    </style>




    <style name="TimePicker_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="fontPath">Catamaran-Regular.ttf</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
